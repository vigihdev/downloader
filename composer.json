{
    "name": "vigihdev/downloader",
    "description": "Robust file downloader with multiple backends (cURL, Guzzle, Native)",
    "keywords": [
        "download",
        "file-downloader",
        "curl",
        "guzzle",
        "image-downloader"
    ],
    "homepage": "https://github.com/vigihdev/downloader",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/filesystem": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Vigihdev\\Downloader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigihdev\\Downloader\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "dev": "php -S localhost:3312 local-dev/index.php"
    }
}